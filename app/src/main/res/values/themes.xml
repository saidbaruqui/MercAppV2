<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TEMA PRINCIPAL UNIFICADO -->
    <style name="Theme.MercAppV2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/verde_manzana</item>
        <item name="colorPrimaryVariant">@color/naranja_suave</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/amarillo_platano</item>
        <item name="colorSecondaryVariant">@color/naranja_suave</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Estilos globales automáticos -->
        <item name="android:buttonStyle">@style/EstiloGlobal.Boton</item>
        <item name="android:textViewStyle">@style/EstiloGlobal.Texto</item>
        <item name="android:editTextStyle">@style/EstiloGlobal.EditText</item>

        <!-- Para campos de texto con bordes -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Para layouts sin barra de título -->
    <style name="Theme.MercAppV2.NoActionBar" parent="Theme.MercAppV2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Para overlays (evita errores de preview) -->
    <style name="Theme.MercAppV2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MercAppV2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ESTILOS GLOBALES POR DEFECTO -->
    <style name="EstiloGlobal.Boton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/verde_manzana</item>
    </style>

    <style name="EstiloGlobal.Texto" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EstiloGlobal.EditText" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/azul_pastel</item>
    </style>

    <!-- ESTILOS PERSONALIZADOS -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/verde_manzana</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/verde_manzana</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DeleteButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/amarillo_platano</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/naranja_suave</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ProductTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/naranja_suave</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProductBodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/texto_principal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/azul_pastel</item>
        <item name="boxStrokeColor">@color/naranja_suave</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

</resources>
