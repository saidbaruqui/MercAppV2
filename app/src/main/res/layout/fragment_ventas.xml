<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_hueso"
    tools:context=".ui.ventas.VentasFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contenedorVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloVentas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Venta"
                android:gravity="center"
                android:textColor="@color/naranja_suave"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Lista de productos disponibles -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos disponibles"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProductos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTint="@color/azul_pastel" />

            <!-- Carrito de productos seleccionados -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrito"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCarrito"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTint="@color/azul_pastel" />

            <!-- Nombre del cliente (opcional) -->
            <EditText
                android:id="@+id/etNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_fondo_azul"
                android:hint="Nombre del cliente (opcional)"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp" />

            <!-- Total a pagar -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: $0.00"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <!-- Botón Finalizar Venta -->
            <Button
                android:id="@+id/btnFinalizarVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar venta"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/verde_manzana" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
